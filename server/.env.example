GEMINI_API_KEY=YOUR_KEY_HERE
GEMINI_MODEL=gemini-1.5-flash
PORT=4000
SILENCE_LIBRE_WARNING=1
# If set, skip probing LibreOffice at startup; relies on SOFFICE_PATH for availability.
LIBRE_SKIP_DETECT=0
# Optional explicit path to soffice(.com/.exe)
SOFFICE_PATH=C:/Program Files/LibreOffice/program/soffice.com
# Force-disable LibreOffice usage (treat as unavailable)
LIBRE_FORCE_DISABLE=0
# Optional dedicated, non-roaming profile dir for headless conversions
LIBRE_OFFICE_PROFILE_DIR=